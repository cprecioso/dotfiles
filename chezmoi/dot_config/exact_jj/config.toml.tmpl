[git]
subprocess = true
sign-on-push = true
push-new-bookmarks = true

[revsets]
log = "current_bookmark"

[revset-aliases]
'local_work' = 'remote_bookmarks(remote=origin)..'
'current_bookmark' = '(trunk()..@)::'

