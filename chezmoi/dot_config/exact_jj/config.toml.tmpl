[ui]
diff.format = "git"
diff.tool = ["difft", "--color=always", "$left", "$right"]
merge-editor = "vscode"
default-command = "log"

[signing]
backend = "ssh"
key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIDlGhuUmMUn/d9Fs99wvgsppmtrg8ijqxGqikJOLhzFq"
