#!/usr/bin/env zsh

zstyle ':antidote:bundle' use-friendly-names 'yes'

# shellcheck source=/dev/null
source /opt/homebrew/share/antidote/antidote.zsh

antidote update --bundles

config_dir="{{.chezmoi.config.destDir}}/.config/antidote"
state_dir="{{.chezmoi.config.destDir}}/.local/state/antidote"

antidote bundle \
	<"$config_dir/zsh_plugins.txt" \
	>"$state_dir/zsh_plugins.zsh"

touch "$state_dir/last_update"
